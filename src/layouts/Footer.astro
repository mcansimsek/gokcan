---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 mt-auto">
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="font-bold text-lg mb-4">{t('footer.company')}</h3>
        <div class="mb-4">
          <img src="/images/logo/logo-dark.png" alt="Gökcan Doğaltaşlar" class="h-12 dark:hidden">
          <img src="/images/logo/logo-light.png" alt="Gökcan Doğaltaşlar" class="h-12 hidden dark:block">
        </div>
        <p class="text-sm">{t('footer.tagline')}</p>
      </div>
      
      <div>
        <h3 class="font-bold text-lg mb-4">{t('footer.navigation')}</h3>
        <ul class="space-y-2">
          <li><a href={`/${lang}/`} class="hover:text-slate-900 dark:hover:text-white transition">{t('nav.home')}</a></li>
          <li><a href={`/${lang}/products/`} class="hover:text-slate-900 dark:hover:text-white transition">{t('nav.products')}</a></li>
          <li><a href={`/${lang}/about/`} class="hover:text-slate-900 dark:hover:text-white transition">{t('nav.about')}</a></li>
          <li><a href={`/${lang}/contact/`} class="hover:text-slate-900 dark:hover:text-white transition">{t('nav.contact')}</a></li>
        </ul>
      </div>
      
      <div>
        <h3 class="font-bold text-lg mb-4">{t('footer.contact')}</h3>
        <address class="not-italic text-sm space-y-2">
          <p>{t('footer.address')}</p>
          <p>
            <a href="tel:+901234567890" class="hover:text-slate-900 dark:hover:text-white transition">+90 123 456 7890</a>
          </p>
          <p>
            <a href="mailto:info@gokcandogaltaslar.com" class="hover:text-slate-900 dark:hover:text-white transition">info@gokcandogaltaslar.com</a>
          </p>
        </address>
      </div>
    </div>
    
    <div class="border-t border-slate-200 dark:border-slate-700 mt-8 pt-6 flex flex-col md:flex-row justify-between items-center text-sm">
      <p>&copy; {currentYear} Gökcan Doğaltaşlar. {t('footer.rights')}</p>
      <div class="flex space-x-4 mt-4 md:mt-0">
        <a href="#" class="hover:text-slate-900 dark:hover:text-white" aria-label="Facebook">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
        </a>
        <a href="#" class="hover:text-slate-900 dark:hover:text-white" aria-label="Instagram">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>
        </a>
        <a href="#" class="hover:text-slate-900 dark:hover:text-white" aria-label="WhatsApp">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
        </a>
      </div>
    </div>
  </div>
</footer>